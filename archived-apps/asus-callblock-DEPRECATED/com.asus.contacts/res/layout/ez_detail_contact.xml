<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/main_view" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ScrollView android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
            <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/ez_add_contact_left_padding" android:paddingTop="@dimen/ez_detail_contact_top_padding" android:paddingRight="@dimen/ez_add_contact_right_padding" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@id/ez_detail_imageview_photo" android:layout_width="@dimen/ez_add_contact_photo_width" android:layout_height="@dimen/ez_add_contact_photo_height" android:layout_marginBottom="@dimen/ez_detail_photo_bottom_margin" android:scaleType="fitXY" />
                <TextView android:textSize="@dimen/ez_detail_contact_name_textsize" android:textColor="@color/ez_detail_contact_name_color" android:layout_gravity="center" android:id="@id/ez_detail_textview_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ez_detail_name_bottom_margin" />
                <TextView android:textSize="@dimen/ez_detail_contact_phone_textsize" android:textColor="@color/ez_detail_contact_phone_color" android:layout_gravity="center" android:id="@id/ez_detail_textview_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <FrameLayout android:id="@id/ez_send_message_layout" android:layout_width="fill_parent" android:layout_height="@dimen/ez_bottom_button_height" android:layout_marginLeft="@dimen/ez_add_contact_button_left_margin" android:layout_marginTop="@dimen/ez_bottom_button_margin" android:layout_marginRight="@dimen/ez_add_contact_button_right_margin" android:layout_marginBottom="@dimen/ez_bottom_button_margin">
                <TextView android:textSize="@dimen/ez_bottom_button_text_size" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center" android:id="@id/ez_send_message" android:background="@drawable/ez_contact_button_background" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/ez_add_contact_message" />
            </FrameLayout>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:background="@drawable/ez_contact_call_button_background" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/ez_bottom_button_height" android:layout_marginLeft="@dimen/ez_add_contact_button_left_margin" android:layout_marginTop="@dimen/ez_bottom_button_margin" android:layout_marginRight="@dimen/ez_add_contact_button_right_margin" android:layout_marginBottom="@dimen/ez_bottom_button_margin">
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/ez_bottom_button_gap_btw_text_and_icon" android:src="@drawable/asus_old_ic_phone" />
                <TextView android:textSize="@dimen/ez_bottom_button_text_size" android:textColor="@android:color/white" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dialButtonText" />
            </LinearLayout>
            <fragment android:name="com.android.contacts.dialpad.AdditionalButtonFragment" android:id="@id/ez_additionalbutton_fragment" android:layout_width="fill_parent" android:layout_height="@dimen/ez_asus_dialerpad_dialer_button_height" android:layout_marginLeft="@dimen/ez_add_contact_button_left_margin" android:layout_marginRight="@dimen/ez_add_contact_button_right_margin" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:id="@id/contacts_unavailable_container" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" />
</LinearLayout>