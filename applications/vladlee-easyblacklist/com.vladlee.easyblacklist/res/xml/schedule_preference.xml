    <com.vladlee.preferences.PreferenceCheckBox android:persistent="true" android:title="@string/friday" android:key="pref_schedule_friday" android:dependency="pref_schedule_by_day_of_week" android:defaultValue="true" />
    <com.vladlee.preferences.PreferenceCheckBox android:persistent="true" android:title="@string/saturday" android:key="pref_schedule_saturday" android:dependency="pref_schedule_by_day_of_week" android:defaultValue="true" />
