<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_checked="true">
        <layer-list android:paddingMode="stack">
            <item>
                <nine-patch android:src="@drawable/asusres_switch_bg_mtrl" android:tint="?android:colorControlActivated" android:alpha="@dimen/asusres_switch_bg_on_alpha" />
            </item>
            <item>
                <nine-patch android:src="@drawable/asusres_switch_bg_mtrl" android:tint="@color/asusres_switch_bg_disabled_light" android:alpha="@dimen/asusres_switch_bg_disabled_alpha" />
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list android:paddingMode="stack">
            <item>
                <nine-patch android:src="@drawable/asusres_switch_bg_mtrl" android:tint="@color/asusres_switch_bg_off" />
            </item>
            <item>
                <nine-patch android:src="@drawable/asusres_switch_bg_mtrl" android:tint="@color/asusres_switch_bg_disabled_light" android:alpha="@dimen/asusres_switch_bg_disabled_alpha" />
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <nine-patch android:src="@drawable/asusres_switch_bg_mtrl" android:tint="?android:colorControlActivated" android:alpha="@dimen/asusres_switch_bg_on_alpha" />
    </item>
    <item android:state_checked="true">
        <nine-patch android:src="@drawable/asusres_switch_bg_mtrl" android:tint="?android:colorControlActivated" android:alpha="@dimen/asusres_switch_bg_on_alpha" />
    </item>
    <item>
        <nine-patch android:src="@drawable/asusres_switch_bg_mtrl" android:tint="@color/asusres_switch_bg_off" />
    </item>
</selector>