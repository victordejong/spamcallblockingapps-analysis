<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <nine-patch android:src="@drawable/asusres_scrubber_track_mtrl" android:tint="@color/asusres_scrubber_track_normal" android:alpha="0.2" />
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent" />
                <item>
                    <nine-patch android:src="@drawable/asusres_scrubber_track_mtrl" android:tint="@color/asusres_scrubber_track_normal" android:alpha="0.2" />
                </item>
            </selector>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent" />
                <item>
                    <nine-patch android:src="@drawable/asusres_scrubber_track_mtrl" android:tint="?android:colorControlActivated" />
                </item>
            </selector>
        </scale>
    </item>
</layer-list>