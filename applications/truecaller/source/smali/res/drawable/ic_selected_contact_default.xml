<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true">
                <layer-list>
                    <item>
                        <shape android:shape="oval">
                            <solid android:color="@color/white" />
                        </shape>
                    </item>
                    <item android:left="@dimen/space" android:top="@dimen/space" android:right="@dimen/space" android:bottom="@dimen/space">
                        <bitmap android:src="@drawable/ic_check" android:tint="@color/accent_default" />
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>
</layer-list>