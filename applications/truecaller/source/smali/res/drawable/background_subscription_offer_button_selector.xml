<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <ripple android:color="?tcx_buttonRippleColor">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?tcx_avatarTextBlue" />
                    <corners android:radius="8.0dip" />
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <ripple android:color="?tcx_buttonRippleColor">
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dip" android:color="?tcx_subscriptionOfferButtonBorderColor" />
                    <solid android:color="?tcx_backgroundPrimary" />
                    <corners android:radius="8.0dip" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>