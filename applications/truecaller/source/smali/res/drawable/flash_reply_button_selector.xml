<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:id="@id/disabled" android:drawable="@drawable/flash_ic_reply_animatable" />
    <item android:state_enabled="true" android:id="@id/enabled" android:drawable="@drawable/flash_ic_reply_animatable_enabled" />
    <transition android:drawable="@drawable/avd_reply_disabled_enabled" android:toId="@id/enabled" android:fromId="@id/disabled" />
    <transition android:drawable="@drawable/avd_reply_enabled_disabled" android:toId="@id/disabled" android:fromId="@id/enabled" />
</animated-selector>