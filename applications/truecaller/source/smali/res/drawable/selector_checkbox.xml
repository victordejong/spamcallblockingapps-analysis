<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="@dimen/icon_tcx_default_size" android:width="@dimen/icon_tcx_default_size" />
                    <solid android:color="?tcx_brandBackgroundBlue" />
                </shape>
            </item>
            <item android:gravity="center" android:drawable="?tcx_conversationActionModeCheck" />
        </layer-list>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:height="@dimen/icon_tcx_default_size" android:width="@dimen/icon_tcx_default_size" />
            <solid android:color="?tcx_messageIncomingBackground" />
            <stroke android:width="1.0dip" android:color="?tcx_messageIncomingStroke" />
        </shape>
    </item>
</selector>