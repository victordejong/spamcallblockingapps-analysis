    <LinearLayout style="@style/Widget.Truecaller.ContainerWrap">
        <LinearLayout android:id="@id/settingsAppTheme" android:background="?selectableItemBackground" android:paddingBottom="@dimen/control_doublespace" style="@style/Widget.Truecaller.ContainerWrap">
            <TextView android:text="@string/SettingsAppTheme" style="@style/Widget.Truecaller.TextView.SettingsTitle" />
