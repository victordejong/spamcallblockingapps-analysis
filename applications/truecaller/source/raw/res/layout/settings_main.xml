        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView style="@style/Widget.Truecaller.CardView">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/settingsAboutTrigger" android:text="@string/SettingsMainAbout" style="@style/Widget.Truecaller.TextView.SettingsIconItem" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>