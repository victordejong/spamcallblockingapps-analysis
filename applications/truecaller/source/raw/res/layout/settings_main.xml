            <TextView android:id="@id/settingsMainTrigger" android:text="@string/SettingsMainGeneral" style="@style/Widget.Truecaller.TextView.SettingsIconItem" />
            <TextView android:id="@id/settingsRingtoneTrigger" android:text="@string/SettingsRingtone" style="@style/Widget.Truecaller.TextView.SettingsIconItem" />
            <TextView android:id="@id/settingsLanguageTrigger" android:text="@string/SettingsGeneralLanguage" style="@style/Widget.Truecaller.TextView.SettingsIconItem" />
