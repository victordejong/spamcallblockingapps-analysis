<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4.0dip" />
            <gradient android:startColor="@color/freshchat_visualizer_bg_start" android:endColor="@color/freshchat_visualizer_bg_start" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/freshchat_visualizer_bg_start" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4.0dip" />
                <gradient android:startColor="@color/freshchat_visualizer_progress_start" android:endColor="@color/freshchat_visualizer_progress_end" android:angle="270.0" android:centerColor="@color/freshchat_visualizer_progress_center" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="4.0dip" />
                <gradient android:startColor="@color/freshchat_visualizer_sec_progress_start" android:endColor="@color/freshchat_visualizer_sec_progress_end" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/freshchat_visualizer_sec_progress_center" />
            </shape>
        </clip>
    </item>
</layer-list>