<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.5dip" android:color="?tcx_alertBackgroundGreen" />
            <corners android:radius="8.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_activated="false">
        <shape android:shape="rectangle">
            <stroke android:width="1.5dip" android:color="?tcx_textTertiary" />
            <corners android:radius="8.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_activated="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.5dip" android:color="?tcx_brandBackgroundBlue" />
            <corners android:radius="8.0dip" />
        </shape>
    </item>
</selector>