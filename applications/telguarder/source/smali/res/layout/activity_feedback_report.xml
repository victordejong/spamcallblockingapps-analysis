<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/white" android:fitsSystemWindows="true" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/header_report_actions" />
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ScrollView android:id="@id/report_new_container" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <LinearLayout android:orientation="vertical" android:padding="@dimen/margin_large" android:layout_width="fill_parent" android:layout_height="fill_parent">
                    <TextView android:textSize="@dimen/text_small" android:textColor="@color/colorAccent" android:id="@id/report_feedback_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/report_feedback_title" />
                    <EditText android:textSize="@dimen/text_medium" android:textColor="@color/text_dark" android:textColorHint="@color/text_hint_medium" android:id="@id/report_feedback_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_large" android:hint="@string/report_message_name" android:maxLines="1" android:singleLine="true" android:inputType="textPersonName" />
                    <EditText android:textSize="@dimen/text_medium" android:textColor="@color/text_dark" android:textColorHint="@color/text_hint_medium" android:id="@id/report_feedback_email" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_large" android:hint="@string/common_email" android:maxLines="1" android:singleLine="true" android:inputType="textEmailAddress" />
                    <EditText android:textSize="@dimen/text_medium" android:textColor="@color/text_dark" android:textColorHint="@color/text_hint_medium" android:id="@id/report_feedback_topic" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_large" android:hint="@string/report_message_topic" android:maxLines="1" android:singleLine="true" android:inputType="textEmailSubject" />
                    <EditText android:textSize="@dimen/text_medium" android:textColor="@color/text_dark" android:textColorHint="@color/text_hint_medium" android:id="@id/report_feedback_message" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:hint="@string/report_feedback_message_placeholder" android:ems="10" android:inputType="textLongMessage|textMultiLine" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <ProgressBar android:id="@id/report_new_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" />
    </RelativeLayout>
</LinearLayout>